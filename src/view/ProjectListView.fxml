<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="400.0" prefWidth="600.0" userData="Project Management System" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.ProjectListViewController">
   <children>
      <TabPane prefHeight="407.0" prefWidth="600.0" tabClosingPolicy="UNAVAILABLE">
        <tabs>
          <Tab text="Project List">
            <content>
              <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="388.0" prefWidth="600.0">
                     <children>
                        <HBox prefHeight="367.0" prefWidth="600.0">
                           <children>
                              <VBox prefHeight="372.0" prefWidth="222.0" spacing="10.0">
                                 <children>
                                    <VBox alignment="BOTTOM_CENTER" prefHeight="293.0" prefWidth="190.0" spacing="20.0">
                                       <children>
                                          <Button mnemonicParsing="false" onAction="#createProjectButton" prefWidth="65.0" text="Create" />
                                          <Button mnemonicParsing="false" onAction="#removeProjectButton" prefWidth="65.0" text="Remove" />
                                          <Button mnemonicParsing="false" onAction="#viewProjectButton" prefWidth="65.0" text="View" />
                                       </children>
                                       <padding>
                                          <Insets bottom="20.0" />
                                       </padding>
                                    </VBox>
                                    <Label fx:id="errorLabel" alignment="TOP_LEFT" prefHeight="140.0" prefWidth="117.0" text="Error Label" textFill="#ff1313" textOverrun="CLIP" wrapText="true">
                                       <padding>
                                          <Insets left="10.0" right="10.0" top="5.0" />
                                       </padding>
                                       <font>
                                          <Font size="14.0" />
                                       </font>
                                    </Label>
                                 </children>
                                 <padding>
                                    <Insets bottom="20.0" />
                                 </padding>
                              </VBox>
                              <TableView fx:id="projectListTable" prefHeight="367.0" prefWidth="588.0">
                                <columns>
                                  <TableColumn fx:id="idProjectColumn" prefWidth="71.0" text="ID" />
                                  <TableColumn fx:id="nameProjectColumn" minWidth="0.0" prefWidth="197.0" text="Name" />
                                    <TableColumn fx:id="statusProjectColumn" minWidth="0.0" prefWidth="125.0" text="Status" />
                                    <TableColumn fx:id="deadlineProjectColumn" prefWidth="89.0" text="Deadline" />
                                </columns>
                              </TableView>
                           </children>
                        </HBox>
                     </children>
                  </AnchorPane>
            </content>
          </Tab>
          <Tab text="Employee List">
            <content>
              <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                     <children>
                        <HBox prefHeight="372.0" prefWidth="600.0">
                           <children>
                              <VBox alignment="CENTER" prefHeight="372.0" prefWidth="325.0" spacing="20.0">
                                 <children>
                                    <Button mnemonicParsing="false" onAction="#addMemberButton" prefWidth="65.0" text="Add" />
                                    <Button mnemonicParsing="false" onAction="#removeMemberButton" prefWidth="65.0" text="Remove" />
                                 </children>
                              </VBox>
                              <TableView fx:id="employeeListTable" prefHeight="372.0" prefWidth="450.0">
                                 <columns>
                                    <TableColumn fx:id="nameEmployeeColumn" prefWidth="168.0" text="Name" />
                                    <TableColumn fx:id="roleEmployeeColumn" minWidth="0.0" prefWidth="187.0" text="Role" />
                                 </columns>
                              </TableView>
                           </children>
                        </HBox>
                     </children></AnchorPane>
            </content>
          </Tab>
        </tabs>
      </TabPane>
   </children>
</VBox>
